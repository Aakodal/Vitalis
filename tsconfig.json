{
    "compilerOptions": {
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./build",
        "allowJs": false,
        "target": "ES2020",
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
